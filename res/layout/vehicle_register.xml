<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_temp" >

    <ScrollView
        android:id="@+id/PersonInfoScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topview"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Vehicle Reg"
                        android:textColor="#FFBF00"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/vehicle"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:background="#66ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Insurance Certificate"
                        android:textColor="#FFBF00"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/insurance"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:background="#66ffffff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/ins_certificate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_address"
                    android:hint="Insurance Certification"
                    android:inputType="text"
                    android:maxLength="15"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="#cccccc" />

                <EditText
                    android:id="@+id/year"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_address"
                    android:hint="Year"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="#cccccc" />

                <EditText
                    android:id="@+id/status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_email"
                    android:hint="Status"
                    android:inputType="text"
                    android:maxLength="15"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="#cccccc" />

                <EditText
                    android:id="@+id/license"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_password"
                    android:hint="License Plate"
                    android:inputType="text"
                    android:maxLength="50"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="#cccccc" />

                <EditText
                    android:id="@+id/InteriorCol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_password"
                    android:hint="Interior Colour"
                    android:inputType="text"
                    android:maxLength="15"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="#cccccc" />

                <EditText
                    android:id="@+id/ExteriorCol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_email"
                    android:hint="Exterior Color"
                    android:inputType="text"
                    android:maxLength="15"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="#cccccc" />

                <EditText
                    android:id="@+id/VehicleClass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/edit_text"
                    android:drawableLeft="@drawable/ic_email"
                    android:hint="Vehicle Class"
                    android:inputType="text"
                    android:maxLength="15"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="#cccccc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>